[Unit]
Description=disk2iso Volatile Data Updater
Documentation=man:disk2iso(1)
After=disk2iso.service

[Service]
Type=oneshot
User=root
Group=root
ExecStart=/bin/bash /opt/disk2iso/lib/update_volatile_data.sh

# Security
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true
ReadWritePaths=/opt/disk2iso/api

# Logging
StandardOutput=journal
StandardError=journal
SyslogIdentifier=disk2iso-volatile-updater

[Install]
WantedBy=multi-user.target
